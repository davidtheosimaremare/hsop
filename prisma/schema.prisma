generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  password     String
  name         String?
  role         String    @default("ADMIN")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  customerId   String?
  isActive     Boolean   @default(true)
  phone        String?
  username     String?   @unique
  otp          String?
  otpExpiresAt DateTime?
  isVerified   Boolean   @default(false)
  customer     Customer? @relation(fields: [customerId], references: [id])
  upgradeRequests UpgradeRequest[]
}

model Customer {
  id               String            @id
  accurateId       Int?              @unique
  name             String?
  email            String?           @unique
  phone            String?
  address          String?
  company          String?
  type             String            @default("BISNIS")
  discount1        Float             @default(0)
  discount2        Float             @default(0)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  discountCP       String            @default("0")
  discountCPIndent String            @default("0")
  discountLP       String            @default("0")
  discountLPIndent String            @default("0")
  discountLighting String            @default("0")
  discountLightingIndent String      @default("0")
  businessCategory String?
  image            String?
  addresses        CustomerAddress[]
  orders           Order[]
  users            User[]
}

model CustomerAddress {
  id         String   @id @default(cuid())
  customerId String
  label      String?
  address    String
  recipient  String?
  phone      String?
  isPrimary  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model Product {
  id              String      @id @default(cuid())
  sku             String      @unique
  name            String
  description     String?
  price           Float
  availableToSell Int         @default(0)
  brand           String?
  category        String?
  image           String?
  accurateId      Int?        @unique
  itemType        String?
  isVisible       Boolean     @default(true)
  datasheet       String?
  specifications  Json?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  orderItems      OrderItem[]
}

model CategoryMapping {
  id           String   @id @default(cuid())
  categoryName String   @unique
  discountType String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Order {
  id                String      @id @default(cuid())
  customerId        String
  status            String      @default("PENDING")
  total             Float
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  attachmentInvoice String?
  attachmentPO      String?
  attachmentQuote   String?
  discount          Float       @default(0)
  notes             String?
  customer          Customer    @relation(fields: [customerId], references: [id])
  items             OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model SearchSuggestion {
  id        String   @id @default(cuid())
  term      String   @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id         String     @id @default(cuid())
  name       String
  parentId   String?
  isVisible  Boolean    @default(true)
  order      Int        @default(0)
  accurateId Int?       @unique
  image      String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  parent     Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children   Category[] @relation("CategoryHierarchy")
}

model CategorySection {
  id          String   @id @default(cuid())
  title       String
  order       Int      @default(0)
  categoryIds String[]
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ClientProject {
  id          String   @id @default(cuid())
  projectName String
  clientName  String
  location    String?
  image       String
  order       Int      @default(0)
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Banner {
  id        String   @id @default(cuid())
  title     String?
  image     String
  link      String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model News {
  id                String    @id @default(cuid())
  title             String
  slug              String    @unique
  excerpt           String?
  content           String
  image             String?
  metaTitle         String?
  metaDescription   String?
  metaKeywords      String?
  ogImage           String?
  isPublished       Boolean   @default(false)
  publishedAt       DateTime?
  author            String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  relatedProductIds String[]
}

model DiscountRule {
  id               String   @id @default(cuid())
  categoryGroup    String   @unique // "LP", "CP", "LIGHTING"
  stockDiscount    String   @default("0")
  indentDiscount   String   @default("0")
  description      String?
  updatedAt        DateTime @updatedAt
}

model SiteSetting {
  id        String   @id @default(cuid())
  key       String   @unique // e.g., "footer_config"
  value     Json
  updatedAt DateTime @updatedAt
}

model SalesQuotation {
  id              String                @id @default(cuid())
  quotationNo     String                @unique
  userId          String?
  customerId      String?
  email           String
  phone           String
  status          String                @default("PENDING") // PENDING, PROCESSING, OFFERED, CONFIRMED, SHIPPED, COMPLETED, CANCELLED
  totalAmount     Float                 @default(0)
  notes           String?
  adminNotes      String?               // catatan umum admin untuk customer
  specialDiscount Float?                // diskon spesial (persentase) untuk keseluruhan
  processedBy     String?               // admin yang memproses
  processedAt     DateTime?             // waktu mulai diproses
  offeredAt       DateTime?             // waktu penawaran dikirim
  confirmedAt     DateTime?             // waktu customer konfirmasi / admin buat SO
  shippedAt       DateTime?             // waktu barang dikirim
  completedAt     DateTime?             // waktu barang diterima
  trackingNumber  String?               // nomor resi pengiriman
  shippingNotes   String?               // catatan pengiriman
  shippingCost    Float?                // biaya ongkir
  freeShipping    Boolean               @default(false) // gratis ongkir (ditanggung toko)
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  items           SalesQuotationItem[]
}

model SalesQuotationItem {
  id           String         @id @default(cuid())
  quotationId  String
  productSku   String
  productName  String
  brand        String
  quantity     Int
  price        Float
  isAvailable  Boolean?       // null = belum dicek, true = tersedia, false = tidak tersedia
  availableQty Int?           // stok tersedia saat dicek
  adminNote    String?        // catatan admin (alternatif, info stok, dll)
  quotation    SalesQuotation @relation(fields: [quotationId], references: [id], onDelete: Cascade)
}

model HomeCTA {
  id                  String   @id @default(cuid())
  title               String
  subtitle            String?
  image               String?
  primaryButtonText   String?
  primaryButtonLink   String?
  secondaryButtonText String?
  secondaryButtonLink String?
  position            String   @unique // "LEFT" (Business) or "RIGHT" (Vendor)
  isVisible           Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model WebhookLog {
  id          String   @id @default(cuid())
  source      String   @default("ACCURATE")
  event       String
  payload     Json
  status      String   // PENDING, PROCESSING, SUCCESS, ERROR
  message     String?
  retryCount  Int      @default(0)
  lastRetryAt DateTime?
  processedAt DateTime @default(now())
}

model Page {
  id              String    @id @default(cuid())
  title           String
  slug            String    @unique
  content         String
  metaTitle       String?
  metaDescription String?
  isPublished     Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model UpgradeRequest {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  requestType  String   // RESELLER, EXCLUSIVE
  status       String   @default("PENDING") // PENDING, APPROVED, REJECTED
  
  // Data specific to upgrade
  companyName  String?
  businessType String?
  address      String?
  phone        String?
  ktpName      String?  // Nama sesuai KTP
  ktp          String?  // Image URL
  npwp         String?  // Image URL
  
  adminNotes   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
